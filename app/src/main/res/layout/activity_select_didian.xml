<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selectDidian"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/mapchangfangxing"
        android:layout_gravity="bottom"
        android:layout_marginTop="0dp"/>
    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dao"/>
        <EditText
            android:id="@+id/select_et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入起点"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/jiahao"/>
        <EditText
            android:id="@+id/select_et2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入目的地"/>
    </LinearLayout>
    <Button
        android:id="@+id/select_b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="输入完毕，生成路线"/>
    <ImageButton
        android:id="@+id/select_ib1"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:src="@drawable/select_jingdiantuijian1"/>



</LinearLayout>